<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<!-- Bootstrap Icons -->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" asp-append-version="true">
	<!-- Boxicons -->
	<link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet' asp-append-version="true">
	<!-- My CSS -->
	<link rel="stylesheet" href="~/css/style.css" asp-append-version="true">

	<title>@ViewData["Title"] Module 2 - GEDSI Hub</title>
</head>
<body>
<!-- -->
	<!-- SIDEBAR -->
	<section id="sidebar">

		<!-- Logo -->
		<a href="#" class="logo">
			<img src="~/images/GEDSI Hub logo.png" alt="GEDSI Hub Logo">
			<span class="text">GEDSI Hub</span>
		</a>

		<!-- Sidebar options and Icons-->
		<ul class="side-menu top">
			<li>
				<a asp-page="/GADO/gado_dashboard">
					<i class="bi bi-clipboard-data"></i>
					<span class="text">Dashboard</span>
				</a>
			</li>
			<li>
				<a asp-page="/GADO/gado_messages">
					<i class="bi bi-envelope-open"></i>
					<span class="text">Messages</span>
				</a>
			</li>
			<li>
				<a asp-page="/GADO/gadfps">
					<i class="bi bi-people"></i>
					<span class="text">GAD Focal Point System</span>
				</a>
			</li>
			<li>
				<a asp-page="/GADO/gado_approval">
					<i class="bi bi-check2-square"></i>
					<span class="text">Approval</span>
				</a>
			</li>
			<li>
				<a asp-page="/GADO/gado_reports">
					<i class="bi bi-file-earmark-ruled"></i>
					<span class="text">Reports</span>
				</a>
			</li>
			<li>
				<a asp-page="/GADO/gado_mandates">
					<i class="bi bi-card-checklist"></i>
					<span class="text">Mandates</span>
				</a>
			</li>
		</ul>
	</section>
	<!-- SIDEBAR -->


	<!-- CONTENT -->
	<section id="content">
		<!-- NAVBAR -->
		<nav>
			<form action="#">
				<div class="form-input">
					<input type="search" placeholder="Search...">
					<button type="submit" class="search-btn"><i class='bx bx-search'></i></button>
				</div>
			</form>
			<a href="#" class="notification">
				<i class='bx bxs-bell'></i>
				<span class="num">8</span>
			</a>
			<a href="#" class="profile">
				<img src="~/images/profile.png" alt="Profile Image">
			</a>
		</nav>
		<!-- NAVBAR -->
		<!-- Main Content Placeholder -->
		<main>
			@RenderBody()
		</main>
	</section>
	<!-- CONTENT -->

</body>
</html>
