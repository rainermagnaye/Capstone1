<!-- Pages/Shared/_Layout.cshtml -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Landing Page - GEDSI Hub</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700&family=Poppins:wght@400;500;600;700&display=swap" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" asp-append-version="true">
</head>
<body>
    <!-- Header -->
    <header class="navbar">
        <div class="container">
            <a href="~/" class="navbar-brand">GEDSI Hub</a>
            <nav class="navbar-nav">
                <a href="~/" class="nav-item">Home</a>
                <a asp-page="/login" class="nav-item">Login</a>
            </nav>
        </div>
    </header>

    <!-- Main Content -->
    <div class="landing-container">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <p>© 2024 GEDSI Hub. All rights reserved.</p>
        </div>
    </footer>
</body>
</html>


