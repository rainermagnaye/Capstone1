<!-- Internal CSS -->
<style>
    /* General Styles */
    .head-title {
        margin-bottom: 20px;
    }

    .head-title .left h1,
    .head-title .left h3 {
        margin: 0;
    }

    .gadoapprovalmain_container {
        display: flex;
        flex-direction: column;
    }

    .gado_approval_tabs {
        display: flex;
        margin-bottom: 20px;
    }

    .gado_approval_tabs .tab {
        padding: 10px 20px;
        cursor: pointer;
        background-color: #f1f1f1;
        margin-right: 10px;
        border-radius: 4px;
        transition: background-color 0.3s ease;
    }

    .gado_approval_tabs .tab.active {
        background-color: #772a2a;
        color: white;
    }

    /* Ensure "content" is displayed when tab is active */
    .content {
        display: none;
    }

    .content.active {
        display: block;
    }

    /* Align "For Approval" and "Approved" sub-tabs under "Plan and Budget" */
    .sub-tabs {
        display: flex;
        margin-bottom: 20px;
    }

    .sub-tabs .sub-tab {
        padding: 10px 15px;
        cursor: pointer;
        background-color: #e9ecef;
        margin-right: 10px;
        border-radius: 4px;
        transition: background-color 0.3s ease;
    }

    .sub-tabs .sub-tab.active {
                background-color: #772a2a;
        color: white;
    }

    .sub-content {
        display: none;
    }

    .sub-content.active {
        display: block;
    }

    .dropdown {
        margin-bottom: 15px;
    }

    .dropdown-header {
        font-weight: bold;
        cursor: pointer;
        background-color: #f8f9fa;
        padding: 10px;
        border-radius: 4px;
        transition: background-color 0.3s ease;
    }

    .dropdown-header:hover {
        background-color: #e2e6ea;
    }

    .dropdown-content {
        display: none;
        margin-top: 10px;
        padding: 10px;
        background-color: #f1f1f1;
        border-radius: 4px;
    }

    .dropdown-content p {
        margin: 0 0 10px;
    }

    .dropdown-content textarea {
        width: 100%;
        padding: 10px;
        margin-bottom: 10px;
        border-radius: 4px;
        border: 1px solid #ccc;
    }

    .dropdown-content button {
        padding: 10px;
        background-color: #4CAF50;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    /* Responsive Design */
    (max-width: 768px) {
        .gado_approval_tabs,
        .sub-tabs {
            flex-direction: column;
        }

        .gado_approval_tabs .tab,
        .sub-tabs .sub-tab {
            width: 100%;
            text-align: center;
        }
    }
</style>

